<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:foreground="?attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/image_view_thumbnail"
            android:layout_width="104dp"
            android:layout_height="104dp"
            android:layout_marginStart="8dp"
            android:contentDescription="@string/thumbnail"
            app:layout_constraintBottom_toBottomOf="@+id/text_view_target"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/text_view_title" />

        <TextView
            android:id="@+id/text_view_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:lineSpacingMultiplier="1.1"
            android:maxLines="2"
            android:padding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/image_view_thumbnail"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Title" />

        <TextView
            android:id="@+id/text_view_public_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:padding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/image_view_thumbnail"
            app:layout_constraintTop_toBottomOf="@+id/text_view_title"
            tools:text="Public Name"/>

        <TextView
            android:id="@+id/text_view_target"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:padding="8dp"
            app:layout_constraintEnd_toStartOf="@+id/text_view_published_time"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/image_view_thumbnail"
            app:layout_constraintTop_toBottomOf="@+id/text_view_public_name"
            tools:text="Target" />

        <TextView
            android:id="@+id/text_view_published_time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:padding="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/text_view_target"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toEndOf="@+id/text_view_target"
            app:layout_constraintTop_toTopOf="@+id/text_view_target"
            tools:text="Published Time" />

        <TextView
            android:id="@+id/text_view_replies"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="@+id/text_view_comments"
            app:layout_constraintEnd_toStartOf="@+id/text_view_comments"
            app:layout_constraintTop_toTopOf="@+id/text_view_comments"
            app:drawableStartCompat="@drawable/ic_speech_bubble_reply_16"
            tools:text="1" />

        <TextView
            android:id="@+id/text_view_comments"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="@+id/text_view_favorites"
            app:layout_constraintEnd_toStartOf="@+id/text_view_favorites"
            app:layout_constraintTop_toTopOf="@+id/text_view_favorites"
            app:drawableStartCompat="@drawable/ic_speech_bubble_16"
            tools:text="1" />

        <TextView
            android:id="@+id/text_view_favorites"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="@+id/text_view_stars"
            app:layout_constraintEnd_toStartOf="@+id/text_view_stars"
            app:layout_constraintTop_toTopOf="@+id/text_view_stars"
            app:drawableStartCompat="@drawable/ic_round_favorite_16"
            tools:text="1" />

        <TextView
            android:id="@+id/text_view_stars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp"
            android:gravity="center"
            app:drawableStartCompat="@drawable/ic_round_star_16"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_view_published_time"
            tools:text="1" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>