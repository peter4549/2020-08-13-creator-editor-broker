<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorSilver</item>
        <item name="colorPrimaryDark">@color/colorSilver</item>
        <item name="colorAccent">@color/colorCrushedIce</item>
        <item name="android:colorControlHighlight">@color/colorControlHighlight</item>
        <item name="android:buttonStyle">@style/ButtonStyle</item>
        <item name="android:editTextStyle">@style/EditTextStyle</item>
        <item name="android:textViewStyle">@style/TextViewStyle</item>
    </style>

    <style name="MaterialComponentsTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:colorControlHighlight">@color/colorControlHighlight</item>
        <item name="android:editTextStyle">@style/EditTextStyle</item>
        <item name="android:textViewStyle">@style/TextViewStyle</item>
    </style>

    <style name="SignInButtonStyle">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/paybooc_otf_bold_font_family</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">16dp</item>
        <item name="android:textColor">@color/color_button_text</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="TextViewStyle" parent="@android:style/Widget.DeviceDefault.TextView">
        <item name="android:fontFamily">@font/paybooc_otf_bold_font_family</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/color_dark_text</item>
    </style>

    <style name="EditTextStyle" parent="@android:style/Widget.DeviceDefault.EditText">
        <item name="android:fontFamily">@font/paybooc_otf_bold_font_family</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/color_dark_text</item>
    </style>

    <style name="ButtonStyle" parent="@android:style/Widget.DeviceDefault.Button.Borderless">
        <item name="android:fontFamily">@font/paybooc_otf_bold_font_family</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/color_dark_text</item>
    </style>

    <style name="TextInputLayoutOutlinedBoxStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:theme">@style/TextInputEditTextOutlinedBoxTheme</item>
    </style>

    <style name="TextInputEditTextOutlinedBoxTheme" parent="ThemeOverlay.MaterialComponents.TextInputEditText.OutlinedBox">
        <item name="colorPrimary">@color/colorBabyBlue</item>
        <item name="colorPrimaryDark">@color/colorBabyBlue</item>
        <item name="colorAccent">@color/colorBabyBlue</item>
        <item name="colorControlActivated">@color/colorBabyBlue</item>
    </style>

    <style name="FontPayboocOtfBold">
        <item name="fontFamily">@font/paybooc_otf_bold_font_family</item>
    </style>

    <style name="FontPayboocOtfExtraBold">
        <item name="fontFamily">@font/paybooc_otf_extra_bold_font_family</item>
    </style>

    <style name="ToolbarTitleStyle" parent="@style/Base.TextAppearance.AppCompat.Title">
        <item name="android:fontFamily">@font/paybooc_otf_extra_bold_font_family</item>
        <item name="android:textColor">@color/color_dark_text</item>
        <item name="android:textSize">20sp</item>
    </style>

</resources>